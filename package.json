{
  "name": "scyllinx",
  "version": "1.0.0",
  "description": "A modern TypeScript ORM for ScyllaDB and SQL databases with Laravel-inspired syntax",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsc",
    "build:prod": "rollup -c",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "docs:api": "node scripts/jsdoc-to-md.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build",
    "release": "npm version patch && npm publish",
    "release:minor": "npm version minor && npm publish",
    "release:major": "npm version major && npm publish"
  },
  "keywords": [
    "orm",
    "scylladb",
    "cassandra",
    "typescript",
    "database",
    "query-builder",
    "migrations",
    "relationships",
    "active-record",
    "nosql",
    "sql"
  ],
  "author": {
    "name": "ScyllinX Team",
    "email": "team@scyllinx.dev",
    "url": "https://scyllinx.dev"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/scyllinx/scyllinx.git"
  },
  "bugs": {
    "url": "https://github.com/scyllinx/scyllinx/issues"
  },
  "homepage": "https://scyllinx.dev",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "CONTRIBUTING.md"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@faker-js/faker": "^9.9.0",
    "@types/mongodb": "^4.0.7",
    "axios": "^1.10.0",
    "better-sqlite3": "^12.2.0",
    "cassandra-driver": "latest",
    "mongodb": "^6.18.0",
    "mysql2": "latest",
    "pg": "latest",
    "reflect-metadata": "latest",
    "tslib": "^2.8.1",
    "uuid": "^11.1.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "@types/pg": "^8.15.4",
    "docdash": "^2.0.2",
    "eslint": "^9.30.1",
    "globals": "^16.3.0",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.4",
    "jsdoc-to-markdown": "^9.1.2",
    "rollup": "^4.45.1",
    "rollup-plugin-dts": "^6.2.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.0",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.6",
    "vitepress": "^1.6.3"
  },
  "packageManager": "pnpm@10.12.3"
}